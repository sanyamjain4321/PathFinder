    <!-- Toast -->
    <div id="toast" class="fixed bottom-4 right-4 z-50 hidden">
      <div class="bg-slate-900 text-white text-sm rounded-lg shadow-lg px-3 py-2 flex items-center gap-2">
        <i data-lucide="check-circle" class="w-4 h-4 text-emerald-400" stroke-width="1.5"></i>
        <span id="toast-text">Saved to bookmarks</span>
      </div>
    </div>

    <script>
      // Icon init
      document.addEventListener('DOMContentLoaded', () => {
        if (window.lucide) { lucide.createIcons({ attrs: { strokeWidth: 1.5 } }); }
      });

      // View elements
      const viewSignup = document.getElementById('view-signup');
      const viewSignin = document.getElementById('view-signin');
      const viewDashboard = document.getElementById('view-dashboard');

      function showView(view) {
        // Hide all
        viewSignup.classList.add('hidden');
        viewSignin.classList.add('hidden');
        viewDashboard.classList.add('hidden');
        // Show selected
        if (view === 'dashboard') {
          viewDashboard.classList.remove('hidden');
        } else if (view === 'signin') {
          viewSignin.classList.remove('hidden');
        } else {
          viewSignup.classList.remove('hidden');
        }
        if (window.lucide) { lucide.createIcons({ attrs: { strokeWidth: 1.5 } }); }
        window.scrollTo({ top: 0, behavior: 'smooth' });
      }

      // Hash routing
      function syncFromHash() {
        switch (location.hash) {
          case '#dashboard':
            showView('dashboard'); break;
          case '#signin':
            showView('signin'); break;
          case '#signup':
          default:
            showView('signup'); break;
        }
      }
      window.addEventListener('hashchange', syncFromHash);
      syncFromHash();

      // Sign up form -> main website (dashboard)
      const signupForm = document.getElementById('signup-form');
      signupForm?.addEventListener('submit', (e) => {
        e.preventDefault();
        location.hash = '#dashboard';
        showView('dashboard');
      });

      // Sign in form -> main website (dashboard)
      const signinForm = document.getElementById('signin-form');
      signinForm?.addEventListener('submit', (e) => {
        e.preventDefault();
        location.hash = '#dashboard';
        showView('dashboard');
      });

      // Sign out -> back to signup
      document.getElementById('signout')?.addEventListener('click', () => {
        location.hash = '#signup';
        showView('signup');
      });

      // Password toggles
      const passInput = document.getElementById('signup-password');
      const passToggle = document.getElementById('toggle-signup-password');
      passToggle?.addEventListener('click', () => {
        passInput.type = passInput.type === 'password' ? 'text' : 'password';
        passToggle.innerHTML = passInput.type === 'password'
          ? '<i data-lucide="eye" class="w-4 h-4" stroke-width="1.5"></i>'
          : '<i data-lucide="eye-off" class="w-4 h-4" stroke-width="1.5"></i>';
        if (window.lucide) { lucide.createIcons({ attrs: { strokeWidth: 1.5 } }); }
      });

      const signinPassInput = document.getElementById('signin-password');
      const signinPassToggle = document.getElementById('toggle-signin-password');
      signinPassToggle?.addEventListener('click', () => {
        signinPassInput.type = signinPassInput.type === 'password' ? 'text' : 'password';
        signinPassToggle.innerHTML = signinPassInput.type === 'password'
          ? '<i data-lucide="eye" class="w-4 h-4" stroke-width="1.5"></i>'
          : '<i data-lucide="eye-off" class="w-4 h-4" stroke-width="1.5"></i>';
        if (window.lucide) { lucide.createIcons({ attrs: { strokeWidth: 1.5 } }); }
      });

      // Skills multi-select in signup
      const skillsToggle = document.getElementById('skills-toggle');
      const skillsMenu = document.getElementById('skills-menu');
      const skillsSummary = document.getElementById('skills-summary');
      const skillsClear = document.getElementById('skills-clear');
      const skillsApply = document.getElementById('skills-apply');

      function updateSkillsSummary() {
        const selected = [...skillsMenu.querySelectorAll('input[type="checkbox"]:checked')].map(c => c.value);
        if (selected.length === 0) {
          skillsSummary.textContent = 'Select skills';
          skillsSummary.classList.remove('text-slate-900');
          skillsSummary.classList.add('text-slate-500');
        } else {
          skillsSummary.textContent = selected.join(', ');
          skillsSummary.classList.remove('text-slate-500');
          skillsSummary.classList.add('text-slate-900');
        }
      }

      skillsToggle?.addEventListener('click', () => {
        skillsMenu.classList.toggle('hidden');
      });
      skillsClear?.addEventListener('click', () => {
        skillsMenu.querySelectorAll('input[type="checkbox"]').forEach(c => c.checked = false);
        updateSkillsSummary();
      });
      skillsApply?.addEventListener('click', () => {
        updateSkillsSummary();
        skillsMenu.classList.add('hidden');
      });

      document.addEventListener('click', (e) => {
        if (skillsMenu && !skillsMenu.contains(e.target) && !skillsToggle.contains(e.target)) {
          skillsMenu.classList.add('hidden');
        }
      });

      // Navbar profile dropdown
      const profileToggle = document.getElementById('profile-toggle');
      const profileMenu = document.getElementById('profile-menu');
      profileToggle?.addEventListener('click', () => {
        profileMenu.classList.toggle('hidden');
      });
      document.addEventListener('click', (e) => {
        if (profileMenu && !profileMenu.contains(e.target) && !profileToggle.contains(e.target)) {
          profileMenu.classList.add('hidden');
        }
      });

      // Sidebar toggle
      const sidebar = document.getElementById('sidebar');
      const sidebarToggle = document.getElementById('sidebar-toggle');
      let sidebarCollapsed = false;
      sidebarToggle?.addEventListener('click', () => {
        if (!sidebar) return;
        sidebarCollapsed = !sidebarCollapsed;
        if (sidebarCollapsed) {
          sidebar.classList.remove('w-72');
          sidebar.classList.add('w-20');
          [...sidebar.querySelectorAll('span')].forEach(el => el.classList.add('hidden'));
        } else {
          sidebar.classList.remove('w-20');
          sidebar.classList.add('w-72');
          [...sidebar.querySelectorAll('span')].forEach(el => el.classList.remove('hidden'));
        }
      });

      // Filter popovers
      const filterButtons = document.querySelectorAll('.filter-btn');
      const filterMenus = document.querySelectorAll('.filter-menu');
      filterButtons.forEach(btn => {
        btn.addEventListener('click', (e) => {
          const wrapper = e.currentTarget.parentElement;
          const menu = wrapper.querySelector('.filter-menu');
          filterMenus.forEach(m => { if (m !== menu) m.classList.add('hidden'); });
          menu.classList.toggle('hidden');
        });
      });
      document.addEventListener('click', (e) => {
        const trigger = e.target.closest('.filter-btn') || e.target.closest('.filter-menu');
        if (!trigger) filterMenus.forEach(m => m.classList.add('hidden'));
      });

      // Charts
      const skillsChartEl = document.getElementById('skillsChart');
      if (skillsChartEl) {
        new Chart(skillsChartEl, {
          type: 'radar',
          data: {
            labels: ['Core PM', 'Analytics', 'Design', 'Comm', 'SQL', 'Experimentation'],
            datasets: [{
              label: 'Match',
              data: [82, 74, 65, 80, 70, 62],
              borderColor: '#0f172a',
              backgroundColor: 'rgba(15, 23, 42, 0.08)',
              borderWidth: 1
            }]
          },
          options: {
            responsive: true,
            scales: {
              r: {
                angleLines:
